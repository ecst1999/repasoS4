<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="repasoS4.Page3">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Entry">
                <Setter Property="BackgroundColor" Value="Red"/>
                <Setter Property="TextColor" Value="Aqua"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblUsuario" HorizontalTextAlignment="End" FontSize="16" TextColor="Red"/>
            <Label Text="VENTANA 3" HorizontalTextAlignment="Center" FontSize="20"/>

            <Entry x:Name="txtDato" IsReadOnly="True"/>
            <Entry x:Name="txtEstudiante" IsReadOnly="True"/>
            <Button x:Name="btnSalir" Text="SALIR" Clicked="btnSalir_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>